<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image"
    tools:context=".Signup">
    <TextView
        android:id="@+id/signuptitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:gravity="center"
        android:text="SignUp"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signuptitle"
        android:background="#38ffffff"
        android:hint="Username"
        android:textColorHint="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/baseline_account_box_24"
        android:drawablePadding="20dp"
       />
    <EditText
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:background="#38ffffff"
        android:hint="Email"
        android:textColorHint="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/eee"
        android:drawablePadding="20dp"
         />
    <EditText
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Email"
        android:background="#38ffffff"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/loc"
        android:drawablePadding="20dp"
        />
    <EditText
        android:id="@+id/RePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Password"
        android:background="#38ffffff"
        android:hint="Confirm Password"
        android:textColorHint="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawablePadding="20dp"
        />

    <Button
        android:id="@+id/RegisterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RePassword"
        android:layout_marginTop="25dp"
        android:text="Register"
        android:textSize="30sp">

    </Button>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/Loginbtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="200dp"
        android:backgroundTint="@color/material_dynamic_neutral70"
        android:layout_below="@id/RegisterButton"
        android:text="Login"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:layout_gravity="end"/>


</RelativeLayout>